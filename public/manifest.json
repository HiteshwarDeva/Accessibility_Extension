{
  "manifest_version": 3,
  "name": "ArmourAI DevTools",
  "version": "1.0",
  "description": "DevTools panel that runs accessibility tests in the inspected page and shows results.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "devtools_page": "devtools.html",
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/axe.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://armourwebcomply.duckdns.org/*"
      ],
      "js": [
        "auth-injector.js"
      ],
      "run_at": "document_idle"
    }
  ]
}