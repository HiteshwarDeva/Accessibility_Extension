{
  "manifest_version": 3,
  "name": "ArmourAI DevTools",
  "version": "1.0",
  "description": "DevTools panel that runs accessibility tests in the inspected page and shows results.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "devtools_page": "devtools.html",
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8080/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/axe.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "auth-success.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}